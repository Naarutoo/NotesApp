<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/et_back"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            >

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notesSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hdsjaf k asjdhfa sdkjflasd fhalsdkjfhalsd fkjasdhf lkasdjhfkalsdjfh aslkdjfhaksjdhf asldkfjhasldkfjhalkdjhfaksdfhal sdhf dksjafh laksdjfhlasdkjfhalsdkjfhalsdkjfhasdkjfhajksdfhalks djfhakjsdlf halkdfjhalskdjfhkajsdhfkjalsdhflkasdhflasdkjhflaskdfhal"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23 March 2022"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>